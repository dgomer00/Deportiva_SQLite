<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.deportiva.database.ModificarJugador">

        <EditText
            android:id="@+id/editTextNombreJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_nombre_jugador"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/editTextNombreCompletoJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_nombre_completo_jugador"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/editTextPosicionJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_posicion_jugador"
            android:inputType="textAutoComplete"
            android:text="" />

        <EditText
            android:id="@+id/editTextFechaJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_fecha_nacimiento"
            android:inputType="datetime"
            android:text="" />

        <EditText
            android:id="@+id/editTextLugarNacimientoJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_nacido"
            android:inputType="text"
            android:text="" />

        <EditText
            android:id="@+id/editTextPesoJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_peso"
            android:inputType="numberDecimal"
            android:text="" />

        <EditText
            android:id="@+id/editTextEstaturaJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_estatura"
            android:inputType="numberDecimal"
            android:text="" />

        <EditText
            android:id="@+id/editTextProcedenciaJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_procedencia"
            android:inputType="text"
            android:text="" />

        <EditText
            android:id="@+id/editTextDorsalJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_dorsal"
            android:inputType="number"
            android:text="" />

        <Spinner
            android:id="@+id/spinnerEquipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="guardarDatos"
            android:text="@string/guardar" />

    </LinearLayout>

</ScrollView>